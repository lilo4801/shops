<div class="pd-10">
  <%= form_with(model: @order, local: true) do |form| %>
    <div class="field">
      <%= form.label :address %>
      <%= form.text_field :address %>
    </div>

    <div class="field">
      <%= form.label :phone %>
      <%= form.text_field :phone %>
    </div>
    <div class="field">
      <%= form.label :description %>
      <%= form.text_field :description %>
    </div>
    <div class="field">
        <h3> Price of your orders <%= number_to_currency(@cart.total_price) %></h3>
    </div>
    <div class="field">
        Check product before receiving
    </div>
    <div class="actions">
      <%= form.submit "Pay"%>
    </div>
  <% end %>

</div>
